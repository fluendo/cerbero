class Recipe(recipe.Recipe):
    version = '2.6.4'
    name = 'libglade'
    licenses = [License.LGPL]
    stype = SourceType.TARBALL
    url = 'http://ftp.gnome.org/pub/gnome/sources/libglade/2.6/libglade-2.6.4.tar.bz2'
    deps = ['gtk+', 'libxml2']
    append_env = {'LDFLAGS': '-lgmodule-2.0'}

    files_libs = ['libglade-2.0']
    files_devel = [
        'bin/libglade-convert',
        'include/libglade-2.0',
        'lib/pkgconfig/libglade-2.0.pc',
        'share/gtk-doc',
        'share/xml/libglade/glade-2.0.dtd',
    ]

    def prepare(self):
        if self.config.variants.python:
            self.deps.append('pygtk')

